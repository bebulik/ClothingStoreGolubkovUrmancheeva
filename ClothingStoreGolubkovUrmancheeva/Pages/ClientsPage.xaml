<Page x:Class="ClothingStoreGolubkovUrmancheeva.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClothingStoreGolubkovUrmancheeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsPage">

    <Grid>
        <DataGrid x:Name="dgClients" Margin="0,37,0,0">
            
        </DataGrid>
        <Button x:Name="btnEdit" Margin="650,401,0,10" Width="140" Height="30" Background="IndianRed" BorderBrush="{x:Null}" Foreground="AliceBlue" FontFamily="Candara Light" Content="Изменить клиента" FontSize="10"/>
        <Button x:Name="btnAdd"  Margin="0,401,650,10" Width="140" Height="30" Background="IndianRed" BorderBrush="{x:Null}" Foreground="AliceBlue" FontFamily="Candara Light" Content="Добавить клиента" FontSize="10"
/>
    </Grid>
</Page>
