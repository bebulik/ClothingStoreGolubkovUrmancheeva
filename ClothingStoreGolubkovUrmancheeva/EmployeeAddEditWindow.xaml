<Window x:Class="ClothingStoreGolubkovUrmancheeva.EmployeeAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothingStoreGolubkovUrmancheeva"
        mc:Ignorable="d"
        Title="EmployeeAddEditWindow" Height="700" Width="500">
    <Grid Background="IndianRed">
        <TextBlock Text="Добавление работника" Foreground="AliceBlue" HorizontalAlignment="Center" FontFamily="Candara Light" FontSize ="20" Margin="0 0 0 0" FontStyle="Italic"/>
        <StackPanel Background="AliceBlue"  Margin="25 25 25 25">
            <TextBlock Text="Логин" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <TextBox x:Name="tbLogin" Margin="0 8 0 0"/>
            <TextBlock Text="Пароль" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <PasswordBox x:Name="pbPass" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <TextBlock Text="Фамилия" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <TextBox x:Name="tbLastName" Margin="0 8 0 0"/>
            <TextBlock Text="Имя" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <TextBox x:Name="tbFirstName" Margin="0 8 0 0"/>
            <TextBlock Text="Отчество" FontSize="20" FontFamily="Candara Light"  Margin="0 8 0 0"/>
            <TextBox x:Name="tbPatr" Margin="0 8 0 0"/>
            <TextBlock Text="Номер телефона" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <TextBox x:Name="tbPhone" Margin="0 8 0 0"/>
            <TextBlock Text="Дата рождения" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <DatePicker x:Name="dpBirth" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0"/>
            <TextBlock Text="Пол" FontSize="20" FontFamily="Candara Light"  Margin="0 8 0 0"/>
            <ComboBox SelectedIndex="0" x:Name="cbGender" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0">
                <ComboBoxItem Content="м"/>
                <ComboBoxItem Content="ж"/>

            </ComboBox>
            <TextBlock Text="Должность" FontSize="20" FontFamily="Candara Light"  Margin="0 8 0 0"/>
            <ComboBox SelectedIndex="0" x:Name="cbRole" FontSize="20" FontFamily="Candara Light" Margin="0 8 0 0">
                <ComboBoxItem Content="Директор"/>
                <ComboBoxItem Content="Менеджер"/>
            </ComboBox>
            <Button x:Name="btnAdd" Content="Добавить" FontSize="20" Height="40" Width="150" 
                    Click="btnAdd_Click" Margin="0 5 0 0" FontFamily="Candara Light" Foreground="AliceBlue" Background="IndianRed" BorderBrush="{x:Null}" />
        </StackPanel>
    </Grid>
</Window>
